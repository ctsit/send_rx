    "project-settings": [
        {
            "key": "send-rx-type",
            "name": "Type",
            "required": true,
            "type": "radio",
            "choices": [
                {"value": "site", "name": "Site"},
                {"value": "patient", "name": "Patient"}
            ]
        },
        {
            "key": "send-rx-target-project-id",
            "name": "Target project",
            "required": true,
            "type": "project-id"
        },
        {
            "key": "send-rx-pdf-template",
            "name": "PDF Template",
            "type": "file"
        },
        {
            "key": "send-rx-pdf-template-variable",
            "name": "PDF Template Global Variables",
            "required": false,
            "type": "sub_settings",
            "repeatable": "true",
            "sub_settings": [
                {
                    "key": "send-rx-pdf-template-variable-key",
                    "name": "Key",
                    "type": "text"
                },
                {
                    "key": "send-rx-pdf-template-variable-value",
                    "name": "Value",
                    "type": "text"
                }
            ]
        },
        {
            "key": "send-rx-message",
            "name": "Message",
            "required": false,
            "type": "sub_settings",
            "sub_settings": [
                {
                    "key": "send-rx-message-subject",
                    "name": "Subject",
                    "type": "text"
                },
                {
                    "key": "send-rx-message-body",
                    "name": "Body",
                    "required": false,
                    "type": "rich-text"
                }
            ]
        }
    ]
}
